        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">@color/nearly_white</item>
    </style>

    <style name="FlagVideoActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="FlagVideoActionButtonLabel" parent="TextStyle_light.Size_16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/nearly_white</item>
    </style>

    <style name="CreateAccountEditText" parent="TextStyle_thin.Size_16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_height">@dimen/create_vr_acct_item_height</item>
        <item name="android:background">@drawable/search_edit_text_background</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLength">64</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/nearly_white</item>
        <item name="android:textColorHint">@color/translucent_white_50_percent</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="VideoPopupItemText" parent="TextStyle_medium.Size_18">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/upload_popup_item_size</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/nearly_white</item>
    </style>

