<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="HiddenActionBar" parent="@android:style/Theme.Holo">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="AppCompatThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/app_background</item>
        <item name="colorAccent">@color/app_color_accent</item>
    </style>

    <style name="AppCompatThemeNoActionBar.Fullscreen">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppCompatThemeNoActionBarTranslucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="SignInTheme" parent="AppCompatThemeNoActionBarTranslucent">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorAccent">@color/app_color_accent</item>
    </style>

    <style name="SettingsTheme" parent="AppCompatThemeNoActionBar">
        <!-- Customize Settings theme here-->
    </style>

    <style name="VRHeadsetChooserTheme" parent="AppCompatThemeNoActionBar">
        <!-- Customize Settings theme here-->
        <item name="colorAccent">@color/app_color_accent</item>
    </style>

    <style name="FlagVideoTheme" parent="AppCompatThemeNoActionBarTranslucent">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorAccent">@color/app_color_accent</item>
    </style>

    <style name="DialogFragTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/app_color_accent</item>
    </style>
    <!-- Define a style for Toolbar title -->
    <!-- By default the font size becomes smaller in landscape mode. To prevent this force font size to be fixed -->
    <!-- http://stackoverflow.com/questions/29072345/toolbar-title-textsize-decreases-on-orientation-change -->
    <!-- This may need to be overridden -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22dp</item>
    </style>

