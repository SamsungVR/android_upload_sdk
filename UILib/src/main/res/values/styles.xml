<resources>

    <style name="SignInTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorAccent">@color/app_color_accent</item>
    </style>

    <style name="TextStyle_regular">
    </style>

    <style name="TextStyle_thin">
    </style>

    <style name="TextStyle_regular.Size_20">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextStyle_thin.Size_16">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextStyle_regular.Size_16">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="CreateAccountEditText" parent="TextStyle_thin.Size_16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_height">@dimen/create_vr_acct_item_height</item>
        <item name="android:background">@drawable/search_edit_text_background</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLength">64</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/nearly_white</item>
        <item name="android:textColorHint">@color/translucent_white_50_percent</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>
